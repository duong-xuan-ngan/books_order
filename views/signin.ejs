<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url("/img/Background_3.png") center/cover no-repeat fixed;
        }

        .login-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
        }

        .frame {
            position: relative;
            -webkit-backdrop-filter: blur(25px) brightness(100%);
            backdrop-filter: blur(25px) brightness(100%);
            background-color: #ffffff1a;
            border-radius: 20px;
            width: 90%; /* Responsive width */
            max-width: 500px; /* Maximum width for larger screens */
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 1;
            box-sizing: border-box; /* Ensure padding is included in width */
        }

        .frame::before {
            content: '';
            position: absolute;
            top: -6px;
            left: -6px;
            right: -6px;
            bottom: -6px;
            border: 3px solid rgba(255, 255, 255, 0.79);
            border-radius: 22px;
            z-index: -1;
        }

        .text-wrapper {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 40px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .text-wrapper-2,
        .text-wrapper-4 {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .input-wrapper {
            width: 100%;
            position: relative;
            margin-bottom: 15px;
        }

        .text-wrapper-3,
        .text-wrapper-5 {
            color: #00000059;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            font-weight: 300;
            text-align: center;
            background-color: #f8eded;
            border: 1px solid #000000;
            border-radius: 20px;
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
            margin-bottom: 15px;
        }

        .text-wrapper-3 {
            height: 40px;
        }

        .text-wrapper-5 {
            height: 40px;
        }

        .input-wrapper input {
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            padding: 10px 40px 10px 10px;
            border-radius: 20px;
            border: 1px solid #000;
            background: #F8EDED;
            width: 100%;
            box-sizing: border-box;
            position: relative;
            outline: none; /* Remove default focus outline */
        }

        .input-wrapper input:focus {
            border-color: #af8ffc; /* Change border color on focus */
            box-shadow: none; /* Remove default box-shadow */
        }

        .clarity-eye-hide {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-40%);
            height: 24px;
            width: 24px;
            cursor: pointer;
            pointer-events: auto;
        }

        .button-wrapper {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .div-wrapper {
            background-color: #af8ffc;
            border: 1px solid #000000;
            border-radius: 25.64px;
            height: 50px;
            width: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background 0.3s;
        }

        .div-wrapper:hover {
            background-color: #9e7efc;
        }

        .text-wrapper-6 {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            font-weight: 600;
            border: none;
            background: none;
            cursor: pointer;
            text-align: center;
            padding: 0;
            margin: 0;
            display: inline;
        }

        .don-t-have-an {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 16px;
            font-weight: 400;
            text-align: center;
            margin-top: 20px;
        }

        .span {
            font-weight: 300;
        }

        .text-wrapper-7 {
            font-weight: 600;
            color: #ffffff;
            text-decoration: none;
        }

        .text-wrapper-7:hover {
            text-decoration: underline;
        }

        .forgot-password {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 14px;
            font-weight: 400;
            text-align: left;
        }

        .forgot-password a {
            color: #ffffff;
            text-decoration: none;
            font-weight: 600;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-page">
        <div class="frame">
            <div class="text-wrapper">Login</div>
            <form action="/user/signin" method="POST">
                <div class="input-wrapper">
                    <div class="text-wrapper-2">Email</div>
                    <input type="email" id="email" name="email" placeholder="username@gmail.com" required>
                </div>
                <div class="input-wrapper">
                    <div class="text-wrapper-4">Password</div>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <img class="clarity-eye-hide" alt="Toggle Password" src="/img/clarity-eye-hide-line.png" />
                    <p class="forgot-password">
                        Forgot password? <a href="/user/forgotpass">Click here</a>
                    </p>
                </div>
                <% if (error) { %>
                    <% if (error.type === 'email_not_found') { %>
                        <div class="error-message">Email has not been signed up yet</div>
                    <% } %>
                    <% if (error.type === 'email_not_verified') { %>
                        <div class="error-message">Email has not been verified yet</div>
                    <% } %>
                    <% if (error.type === 'invalid_credentials') { %>
                        <div class="error-message">Wrong password or email</div>
                    <% } %>
                <% } %>
                <div class="button-wrapper">
                    <div class="div-wrapper">
                        <button type="submit" class="text-wrapper-6">Sign in</button>
                    </div>
                </div>
            </form>
            <p class="don-t-have-an">
                <span class="span">Don't have an account yet?</span>
                <a href="/user/signup" class="text-wrapper-7"> Register here</a>
            </p>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const togglePassword = document.querySelector('.clarity-eye-hide');
            const passwordInput = document.querySelector('#password');
            const eyeOpenImg = "/img/clarity-eye-open-line.png"; // Internal eye-open image path
            const eyeCloseImg = "/img/clarity-eye-hide-line.png"; // Internal eye-close image path

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', () => {
                    const type = passwordInput.type === 'password' ? 'text' : 'password';
                    passwordInput.type = type;
                    togglePassword.src = type === 'password' ? eyeCloseImg : eyeOpenImg;
                });
            }

            const signInButton = document.querySelector('.div-wrapper');
            if (signInButton) {
                signInButton.addEventListener('click', () => {
                    // Redirect to main page
                    window.location.href = 'mainpage.ejs'; // Change to your main page URL
                });
            }
        });
    </script>
</body>
</html>