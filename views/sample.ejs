<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/index.css" />
    <link rel="stylesheet" href="/global.css" />
    <link rel="stylesheet" href="/styleguide.css" />
    <link rel="stylesheet" href="/style.css" />
</head>
<body>
    <div class="shop">
        <div class="container">
            <header class="header">
                <div class="logo-nav">
                    <img class="bookclub-logo" src="/img/bookclub-logo-2-1.png" alt="Bookclub Logo"/>
                    <nav class="nav-links">
                        <a href="#" class="nav-link">Main page</a>
                        <a href="#" class="nav-link">Book store</a>
                    </nav>
                </div>
            </header>
            <div class="main-content">
                <div class="filter-sort">
                    <div class="filter">
                        <img class="system-uicons" src="/img/system-uicons-filtering.svg" alt="Filter"/>
                        <span class="text-wrapper-3">Filter</span>
                    </div>
                    <div class="sort">
                        <span class="text-wrapper-4">Sort by</span>
                        <div class="sort-options">
                            <span class="text-wrapper-5">Default</span>
                        </div>
                    </div>
                </div>
                <div class="featured-products">
                    <!-- Dynamic product content here, for example: -->
                    <% books.forEach(function(book) { %>
                    <a href="books/details/<%= book._id %>" class="book-item-link"> <!-- Add link to book details -->
                        <div class="book-item">
                            <div class="product-image">
                                <img src="<%= book.image %>" alt="<%= book.title %>"/> <!-- Use 'image' for the book image -->
                                <% if (book.discount) { %>
                                <div class="discount-badge"><%= book.discount %>%</div> <!-- Discount badge -->
                                <% } %>
                            </div>
                            <div class="product-details">
                                <div class="price">
                                    <div class="frame-4">
                                        <div class="fix-price"><%= book.price %> đ</div> <!-- Use 'price' for the current price -->
                                        <div class="fix-price-2"><%= book.original_price %> đ</div> <!-- Use 'original_price' for the original price -->
                                    </div>
                                </div>
                                <div class="product-name"><%= book.title %></div> <!-- Use 'title' for the book name -->
                            </div>
                        </div>
                    </a>
                    <% }); %>
                </div>
                <footer class="footer">
                    <div class="footer-content">
                        <div class="footer-left">
                            <img class="bookclub-logo" src="/img/bookclub-logo-2-1.png" alt="Bookclub Logo"/>
                            <div class="club-name">VGU ReadInspired Club</div>
                        </div>
                        <div class="footer-right">
                            <div class="contact-item">
                                <img src="/img/social-icons-4.svg" alt="Facebook Logo" class="contact-logo"/>
                                <a href="https://www.facebook.com/VGUBookInspiredClubLIBER" class="contact-link">VGUBookInspiredClubLIBER</a>
                            </div>
                            <div class="contact-item">
                                <img src="/img/email-icon.svg" alt="Email Logo" class="contact-logo"/>
                                <span class="contact-link">readinspired@vgu.edu.vn</span>
                            </div>
                        </div>
                    </div>
                    <div class="footer-bottom">
                        <p class="footer-text">Ring road 4, Quarter 4, Thoi Hoa Ward, Ben Cat City, Binh Duong Province</p>
                        <p class="footer-text">Tel. (0274) 222 0990 - 70206 | Fax: (0274) 222 0980</p>
                        <p class="footer-text">Copyright @2021 by VGU Library</p>
                    </div>
                </footer>
            </div>
        </div>
    </div>
</body>
</html>