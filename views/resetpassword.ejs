<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url("/img/Background_3.png") center/cover no-repeat fixed;
        }

        .reset-password-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            overflow-x: hidden; /* Disable horizontal scrolling */
            overflow-y: auto; /* Allow vertical scrolling */
        }

        .scroll-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 20px;
            min-height: 200vh; /* Increase height for scrollable area */
            box-sizing: border-box;
        }

        .frame {
            position: relative;
            -webkit-backdrop-filter: blur(25px) brightness(100%);
            backdrop-filter: blur(25px) brightness(100%);
            background-color: #ffffff1a;
            border-radius: 20px;
            width: 90%; /* Responsive width */
            max-width: 500px; /* Max width for larger screens */
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            box-sizing: border-box;
        }

        .frame::before {
            content: '';
            position: absolute;
            top: -6px;
            left: -6px;
            right: -6px;
            bottom: -6px;
            border: 3px solid rgba(255, 255, 255, 0.79);
            border-radius: 22px;
            z-index: -1;
        }

        .text-wrapper {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 40px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .input-wrapper {
            width: 100%;
            position: relative;
            margin-bottom: 15px;
        }

        .text-wrapper-2,
        .text-wrapper-4 {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .text-wrapper-3,
        .text-wrapper-5 {
            color: #00000059;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            font-weight: 300;
            text-align: center;
            background-color: #f8eded;
            border: 1px solid #000000;
            border-radius: 20px;
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
            margin-bottom: 15px;
        }

        .input-wrapper input {
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            padding: 10px 40px 10px 10px;
            border-radius: 20px;
            border: 1px solid #000;
            background: #F8EDED;
            width: 100%;
            box-sizing: border-box;
            position: relative;
        }

        .clarity-eye-hide {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(15%);
            height: 24px;
            width: 24px;
            cursor: pointer;
            pointer-events: auto;
        }

        .div-wrapper {
            background-color: #af8ffc;
            border: 1px solid #000000;
            border-radius: 25.64px;
            height: 50px;
            width: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
            cursor: pointer;
            transition: background 0.3s, box-shadow 0.3s;
        }

        .div-wrapper:hover {
            background-color: #9e7efc;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .submit-button {
            color: #ffffff;
            font-family: "Inter", Helvetica, Arial, sans-serif;
            font-size: 20px;
            font-weight: 600;
            display: inline-block;
            transition: background 0.3s;
        }

        /* Media query for landscape mode */
        @media (orientation: landscape) {
            .reset-password-page {
                overflow-y: auto; /* Ensure vertical scrolling */
            }
            .scroll-wrapper {
                display: flex;
                align-items: flex-start;
                min-height: 200vh;
            }
            .frame {
                width: 90%;
                max-width: 500px;
                margin: auto;
            }
        }
    </style>
</head>
<body>
    <div class="reset-password-page">
        <div class="scroll-wrapper">
            <div class="frame">
                <div class="text-wrapper">Reset Password</div>
                <div class="input-wrapper">
                    <div class="text-wrapper-2">New Password</div>
                    <input type="password" id="new-password" placeholder="Enter new password">
                    <img class="clarity-eye-hide" alt="Toggle Password" src="/img/clarity-eye-hide-line.png" />
                </div>
                <div class="input-wrapper">
                    <div class="text-wrapper-4">Confirm Password</div>
                    <input type="password" id="confirm-password" placeholder="Confirm password">
                    <img class="clarity-eye-hide" alt="Toggle Password" src="/img/clarity-eye-hide-line.png" />
                </div>
                <div class="div-wrapper">
                    <div class="submit-button">Submit</div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const togglePassword = document.querySelectorAll('.clarity-eye-hide');
            togglePassword.forEach(icon => {
                const passwordInput = icon.previousElementSibling;
                icon.addEventListener('click', () => {
                    const type = passwordInput.type === 'password' ? 'text' : 'password';
                    passwordInput.type = type;
                    icon.src = type === 'password' ? "/img/clarity-eye-hide-line.png" : "/img/clarity-eye-open-line.png";
                });
            });

            const submitButton = document.querySelector('.div-wrapper');
            if (submitButton) {
                submitButton.addEventListener('click', () => {
                    // Handle the form submission
                    alert('Password reset form submitted.');
                });
            }
        });
    </script>
</body>
</html>