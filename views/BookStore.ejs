<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/index.css" />
    <link rel="stylesheet" href="/global.css" />
    <link rel="stylesheet" href="/styleguide.css" />
    <link rel="stylesheet" href="/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="shop">
        <div class="container">
            <header class="header">
                <div class="logo-nav">
                    <img class="bookclub-logo" src="/img/bookclub.jpg" alt="Bookclub Logo"/>
                    <nav class="nav-links">
                        <a href="#" class="nav-link">Book store</a>
                    </nav>
                </div>
            </header>
            <div class="main-content">
                <div class="filter-sort">
                    <div class="sort">
                        <span class="text-wrapper-4">Sort by</span>
                        <div class="sort-options">
                            <select id="sortSelect">
                                <option value="default" <%= currentSort === 'default' ? 'selected' : '' %>>Default</option>
                                <option value="priceDesc" <%= currentSort === 'priceDesc' ? 'selected' : '' %>>Price: High to Low</option>
                                <option value="priceAsc" <%= currentSort === 'priceAsc' ? 'selected' : '' %>>Price: Low to High</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="featured-products">
                    <% if (books && books.length > 0) { %>
                        <% books.forEach(function(book) { %>
                            <a href="/user/books/details/<%= book._id %>" class="book-item-link">
                                <div class="book-item">
                                    <div class="product-image">
                                        <img src="<%= book.image %>" alt="<%= book.title %>"/>
                                        <% if (book.discount) { %>
                                            <div class="discount-badge"><%= book.discount %>%</div>
                                        <% } %>
                                    </div>
                                    <div class="product-details">
                                        <div class="price">
                                            <div class="frame-4">
                                                <div class="fix-price"><%= book.price %> đ</div>
                                                <% if (book.original_price && book.original_price > book.price) { %>
                                                    <div class="fix-price-2"><%= book.original_price %> đ</div>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="product-name"><%= book.title %></div>
                                    </div>
                                </div>
                            </a>
                        <% }); %>
                    <% } else { %>
                        <p>No books available at the moment.</p>
                    <% } %>
                </div>
                <footer class="footer">
                    <div class="footer-content">
                        <div class="footer-left">
                            <img class="bookclub-logo" src="/img/bookclub.jpg" alt="Bookclub Logo"/>
                            <div class="club-name">VGU ReadInspired Club</div>
                        </div>
                        <div class="footer-right">
                            <div class="contact-item">
                                <img src="/img/social-icons-4.svg" alt="Facebook Logo" class="contact-logo"/>
                                <a href="https://www.facebook.com/VGUBookInspiredClubLIBER" class="contact-link" target="_blank" rel="noopener noreferrer">VGUBookInspiredClubLIBER</a>
                            </div>
                            <div class="contact-item">
                                <img src="/img/email-icon.svg" alt="Email Logo" class="contact-logo"/>
                                <span class="contact-link">readinspired@vgu.edu.vn</span>
                            </div>
                        </div>
                    </div>
                    <div class="footer-bottom">
                        <p class="footer-text">Ring road 4, Quarter 4, Thoi Hoa Ward, Ben Cat City, Binh Duong Province</p>
                        <p class="footer-text">Tel. (0274) 222 0990 - 70206 | Fax: (0274) 222 0980</p>
                        <p class="footer-text">Copyright @2021 by VGU Library</p>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('sortSelect').addEventListener('change', function() {
            const sortOrder = this.value;
            window.location.href = `/user/BookStore?sort=${sortOrder}`;
        });
    </script>
</body>
</html>